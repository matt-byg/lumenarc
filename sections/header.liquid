<div
  class="
    top-bar
    top-bar--fixed-{{ section.settings.fix_top_bar }}
    top-bar--announcement-bar--{{ section.settings.show_announcement_message }}
  "
>
  <section class="section">
    <div class="container">
      {% if section.settings.search_box_top_bar %}
        <div
          class="
            one-fourth
            column
            medium-down--one-whole
            top_bar_search
          "
        >
          {%
            render 'search-form',
            context: 'header',
            show_overlay: true,
          %}
        </div>
      {% endif %}

      {% if currency_selector == true or locale_selector == true %}
        <div
          class="
            currencies-switcher
            one-half
            column
            is-hidden-mobile-only
          "
        >
          {%
            render 'currencies-switcher',
            additional_classes: 'header-menu__disclosure',
            currency_selector: currency_selector,
            locale_selector: locale_selector,
          %}
        </div>
      {% endif %}

      <div
        class="
          top-bar__menu-column
          {% if section.settings.search_box_top_bar and disclosureEnabled == true %}
            one-fourth
            column
          {% elsif section.settings.search_box_top_bar == false and disclosureEnabled == true %}
            one-half
            columns
          {% elsif section.settings.search_box_top_bar and disclosureEnabled == false %}
            three-fourths
            columns
          {% else %}
            one-whole
            column
          {% endif %}
          medium-down--one-whole
        "
      >
        <ul class="top-bar__menu">
          {% if section.settings.top_bar_linklist != blank %}
            {% assign top_bar_menu = linklists[section.settings.top_bar_linklist] %}

            {% for link in top_bar_menu.links %}
              <li class="top-bar__menu-item">
                <a class="top-bar__menu-item-link" href="{{ link.url }}">
                  {{- link.title -}}
                </a>
              </li>

              {% for sub_link in link.links %}
                <li class="top-bar__menu-item">
                  <a class="top-bar__menu-item-link" href="{{ sub_link.url }}">
                    {{- sub_link.title -}}
                  </a>
                </li>

                {% for sub_sub_link in sub_link.links %}
                  <li class="top-bar__menu-item">
                    <a class="top-bar__menu-item-link" href="{{ sub_sub_link.url }}">
                      {{- sub_sub_link.title -}}
                    </a>
                  </li>
                {% endfor %}
              {% endfor %}
            {% endfor %}
          {% endif %}

          {% if section.settings.phone_number != blank %}
            <li class="top-bar__menu-item">
              <a
                class="top-bar__menu-item-link"
                href="tel:{{ section.settings.phone_number | replace: ' ', '' | replace: '+', '' | replace: '-', '' }}"
              >
                {{- section.settings.phone_number | escape -}}
              </a>
            </li>
          {% endif %}

          {% if shop.customer_accounts_enabled %}
            {% if customer %}
              <li class="top-bar__menu-item">
                <a
                  class="top-bar__menu-item-link"
                  id="customer_logout_link"
                  href="{{ routes.account_logout_url }}"
                  data-no-instant
                >
                  {{- 'layout.customer.log_out' | t -}}
                </a>
              </li>
              {% if customer.name != blank %}
                <li class="top-bar__menu-item">
                  <a
                    class="top-bar__menu-item-link"
                    href="{{ routes.account_url }}"
                    data-no-instant
                  >
                    {{- customer.name -}}
                  </a>
                </li>
              {% endif %}
            {% else %}
              <li class="top-bar__menu-item">
                <a
                  class="top-bar__menu-item-link"
                  id="customer_login_link"
                  href="{{ routes.account_login_url }}"
                  data-no-instant
                >
                  {{- 'layout.customer.log_in' | t -}}
                </a>
              </li>
            {% endif %}
          {% endif %}

          <li class="top-bar__menu-item">
            <a
              class="
                top-bar__menu-item-link
                cart_button
              "
              href="{{ routes.cart_url }}"
            >
              <span class="icon-cart"></span>
              {{ 'Quote Request' }} (<span class="cart_count">{{ cart.item_count }}</span>)
            </a>
          </li>

          <!-- <li class="top-bar__menu-item">
            {% if cart.item_count == 0 %}
              <a
                class="
                  top-bar__menu-item-link
                  checkout
                "
                href="{{ routes.cart_url }}"
              >
                {{- 'layout.general.checkout' | t -}}
              </a>
            {% else %}
              {% assign checkout_url = '/checkout' %}

              {% for locale in shop.enabled_locales %}
                {% if locale.primary == true %}
                  {% assign defaultLocale = locale.iso_code %}

                  {% if defaultLocale != request.locale.iso_code %}
                    {% assign checkout_url = request.locale.iso_code | append: '/checkout' %}
                  {% endif %}
                {% endif %}
              {% endfor %}

              <a
                class="
                  top-bar__menu-item-link
                  checkout
                "
                href="{{ checkout_url }}"
              >
                {{- 'layout.general.checkout' | t -}}
              </a>
            {% endif %}
          </li> -->
        </ul>
      </div>
    </div>
  </section>
</div>

